<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shape drawable for the background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Set the background color as transparent -->
            <corners android:radius="23dp" /> <!-- Set the corner radius of the CardView -->
        </shape>
    </item>
    <!-- Gradient drawable for the outline -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="5dp"
            android:color="@color/primaryColor"
            />
            <corners android:radius="20dp" /> <!-- Set the corner radius of the CardView -->
        </shape>
    </item>
</layer-list>