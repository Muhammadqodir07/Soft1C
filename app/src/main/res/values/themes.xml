<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Soft1C" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextLogInButton" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_log_in</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextNumber" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputDefault" parent="">
        <item name="android:textSize">@dimen/text_input_size_18</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ElayoutHintColor" parent="">
        <item name="android:textColorHint">@color/disableHintColor</item>
    </style>

    <style name="Heading" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/head_size_18</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardViewDefault" parent="">
        <item name="android:backgroundTint">@color/commandTint</item>
    </style>

    <style name="AutoCompleteSave" parent="">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AutoCompleteSaveText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/white</item>
    </style>


    <style name="ToolbarDefaultStyle" parent="">
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="ButtonDefaultStyle" parent="ShapeAppearanceOverlay.Material3.Button">

    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/cardview_shape</item>
    </style>

</resources>