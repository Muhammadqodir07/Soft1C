<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Soft1C" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextLogInButton" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_log_in</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextNumber" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputDefault" parent="">
        <item name="android:textSize">@dimen/text_input_size_18</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ElayoutHintColor" parent="">
        <item name="android:textColorHint">@color/disableHintColor</item>
    </style>

    <style name="Heading" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/head_size_18</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardViewDefault" parent="">
        <item name="android:backgroundTint">@color/commandTint</item>
    </style>

    <style name="AutoCompleteSave" parent="">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AutoCompleteSaveText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/white</item>
    </style>


    <style name="ToolbarDefaultStyle" parent="">
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="ButtonDefaultStyle" parent="ShapeAppearanceOverlay.Material3.Button">

    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/cardview_shape</item>
    </style>

    <public name="CalcDialogStyle" type="style"/>
    <style name="CalcDialogStyle">
        <item name="calcDialogMaxWidth">400dp</item>
        <item name="calcDialogMaxHeight">500dp</item>
        <item name="calcButtonTextClear">@string/calc_dialog_clear</item>
        <item name="calcButtonTextCancel">@string/calc_dialog_cancel</item>
        <item name="calcButtonTextOk">@string/calc_dialog_ok</item>
        <item name="calcButtonTexts">@array/calc_dialog_btn_texts</item>
        <item name="calcBackgroundColor">?colorBackgroundFloating</item>
        <item name="calcHeaderColor">?calcBackgroundColor</item>
        <item name="calcHeaderElevation">2dp</item>
        <item name="calcHeaderElevationColor">#33000000</item>
        <item name="calcValueStyle">@style/CalcValueStyle</item>
        <item name="calcExpressionScrollViewStyle">@style/CalcExpressionScrollViewStyle</item>
        <item name="calcExpressionStyle">@style/CalcExpressionStyle</item>
        <item name="calcDigitBtnStyle">@style/CalcNumberBtnStyle</item>
        <item name="calcDigitBtnColor">@android:color/transparent</item>
        <item name="calcOperationBtnStyle">@style/CalcOperationBtnStyle</item>
        <item name="calcAnswerBtnStyle">@style/CalcAnswerBtnStyle</item>
        <item name="calcEraseBtnStyle">@style/CalcEraseBtnStyle</item>
        <item name="calcDialogButtonStyle">@style/CalcDialogButtonStyle</item>
        <item name="calcErrors">@array/calc_dialog_errors</item>
    </style>

    <public name="CalcValueStyle" type="style"/>
    <style name="CalcValueStyle">
        <item name="android:layout_height">64dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="autoSizeMaxTextSize">24sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">1sp</item>
    </style>

    <public name="CalcExpressionStyle" type="style"/>
    <style name="CalcExpressionStyle">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textColor">@color/material_on_background_emphasis_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <public name="CalcExpressionScrollViewStyle" type="style"/>
    <style name="CalcExpressionScrollViewStyle">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">none</item>
    </style>

    <public name="CalcNumberBtnStyle" type="style"/>
    <style name="CalcNumberBtnStyle">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5</item>
        <item name="android:textSize">28sp</item>
    </style>

    <public name="CalcOperationBtnStyle" type="style"/>
    <style name="CalcOperationBtnStyle">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5</item>
    </style>

    <public name="CalcAnswerBtnStyle" type="style"/>
    <style name="CalcAnswerBtnStyle">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <public name="CalcEraseBtnStyle" type="style"/>
    <style name="CalcEraseBtnStyle">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/calc_ic_backspace</item>
        <item name="tint">@color/material_on_background_emphasis_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:contentDescription">@string/calc_dialog_erase</item>
    </style>

    <public name="CalcDialogButtonStyle" type="style"/>
    <style name="CalcDialogButtonStyle"
        parent="Widget.MaterialComponents.Button.TextButton.Dialog"/>
</resources>