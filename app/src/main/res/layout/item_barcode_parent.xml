<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_doc_number"
        style="@style/TextNumber"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:background="@drawable/rectangle"
        android:gravity="center|start"
        android:paddingStart="@dimen/default_margin_item"
        android:textSize="16sp"
        tools:text="YI000045324" />

    <TextView
        android:id="@+id/txt_code_client"
        style="@style/TextNumber"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:background="@drawable/rectangle"
        android:gravity="center|start"
        android:paddingStart="@dimen/default_margin_item"
        android:textSize="16sp"
        tools:text="99999" />

    <TextView
        android:id="@+id/txt_date"
        style="@style/TextNumber"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:background="@drawable/rectangle"
        android:gravity="center|start"
        android:paddingStart="@dimen/default_margin_item"
        android:textSize="14sp"
        tools:text="01/01/01 \n 10:08" />

    <TextView
        android:id="@+id/txt_total_seats"
        style="@style/TextNumber"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:paddingStart="@dimen/default_margin_item"
        android:textSize="14sp"
        tools:text="999" />

</LinearLayout>